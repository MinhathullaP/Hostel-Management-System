<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hostel">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hostel"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".UserHomenavbar"
            android:exported="false"
            android:label="@string/title_activity_user_homenavbar"
            android:theme="@style/Theme.Hostel.NoActionBar" />
        <activity
            android:name=".View_bill"
            android:exported="false" />
        <activity
            android:name=".Change_password"
            android:exported="false" />
        <activity
            android:name=".student_apply_leave"
            android:exported="false" />
        <activity
            android:name=".student_make_payment"
            android:exported="false" />
        <activity
            android:name=".student_view_leave_request"
            android:exported="false" />
        <activity
            android:name=".student_view_bill"
            android:exported="false" />
        <activity
            android:name=".student_home"
            android:exported="false" />
        <activity
            android:name=".login"
            android:exported="false" />
        <activity
            android:name=".ipsettings"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <service android:name=".LocationService" />
    </application>

</manifest>